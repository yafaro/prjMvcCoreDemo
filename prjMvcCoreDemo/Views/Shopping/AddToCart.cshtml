
@{
    ViewData["Title"] = "AddToCart";
}

<h1>加入購物車作業</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>輸入購買數量</h4>
        <hr />

        <input type="hidden" name="txtFId" value="@ViewBag.FID" />
        <div class="form-group">
            數量
            <div class="col-md-10">
                @Html.TextBox("txtCount", "1", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="購買" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("取消", "List")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>